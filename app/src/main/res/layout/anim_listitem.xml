<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <ImageView
        android:id="@+id/animePoster"
        android:layout_width="80dp"
        android:layout_height="120dp"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/animeTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/animePoster"
        app:layout_constraintStart_toEndOf="@id/animePoster"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="Anime Title" />

    <TextView
        android:id="@+id/animeEpisodes"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/animeTitle"
        app:layout_constraintStart_toEndOf="@id/animePoster"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="Episodes: 24" />

    <TextView
        android:id="@+id/animeScore"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/animeEpisodes"
        app:layout_constraintStart_toEndOf="@id/animePoster"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="Score: 9.0" />

</androidx.constraintlayout.widget.ConstraintLayout>